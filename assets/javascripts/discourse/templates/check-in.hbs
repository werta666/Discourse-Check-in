<div class="check-in-page">
  <div class="check-in-container">
    {{#if this.showSuccessMessage}}
      <div class="check-in-message success-message">
        <span class="message-text">{{this.successMessage}}</span>
        <button class="btn-link close-message" {{action "hideMessage"}}>
          {{d-icon "times"}}
        </button>
      </div>
    {{/if}}

    <div class="check-in-header">
      <h1>{{i18n "check_in.page_title"}}</h1>
      <p class="page-description">{{i18n "check_in.page_description"}}</p>
    </div>

    <div class="check-in-tabs">
      <nav class="nav-tabs">
        <button
          class="nav-tab {{if isCheckInTab 'active'}}"
          {{action "switchTab" "check-in"}}
        >
          {{d-icon "calendar-plus"}}
          {{i18n "check_in.tabs.check_in"}}
        </button>

        <button
          class="nav-tab {{if isRecordsTab 'active'}}"
          {{action "switchTab" "records"}}
        >
          {{d-icon "list"}}
          {{i18n "check_in.tabs.records"}}
        </button>

        <button
          class="nav-tab {{if isMakeupTab 'active'}}"
          {{action "switchTab" "makeup"}}
        >
          {{d-icon "undo"}}
          {{i18n "check_in.tabs.makeup"}}
        </button>
      </nav>

      <div class="tab-content">
        {{#if isCheckInTab}}
          <div class="tab-pane active">
            {{simple-check-in}}
          </div>
        {{/if}}

        {{#if isRecordsTab}}
          <div class="tab-pane active">
            <p>{{i18n "check_in.records.coming_soon"}}</p>
          </div>
        {{/if}}

        {{#if isMakeupTab}}
          <div class="tab-pane active">
            <p>{{i18n "check_in.makeup.coming_soon"}}</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<% content_for :title do %>每日签到<% end %>

<div class="check-in-container">
  <div class="check-in-header">
    <h1>每日签到</h1>
    <p>坚持每日签到，获得积分奖励！</p>
  </div>

  <div class="check-in-stats">
    <div class="stat-item">
      <div class="stat-number" id="total-points">0</div>
      <div class="stat-label">总积分</div>
    </div>
    <div class="stat-item">
      <div class="stat-number" id="consecutive-days">0</div>
      <div class="stat-label">连续签到天数</div>
    </div>
  </div>

  <div class="check-in-action">
    <button id="check-in-btn" class="btn btn-primary btn-large">
      <i class="fa fa-calendar-check"></i>
      <span id="btn-text">立即签到</span>
    </button>
  </div>

  <div id="message-area" class="check-in-message" style="display: none;">
    <div class="alert" id="message-content"></div>
  </div>

  <div class="check-in-info">
    <h3>签到规则</h3>
    <ul>
      <li>每日签到可获得 <%= SiteSetting.check_in_daily_points || 10 %> 积分</li>
      <li>连续签到可获得额外奖励积分</li>
      <li>每天只能签到一次</li>
    </ul>
  </div>
</div>

<style>
.check-in-container {
  max-width: 600px;
  margin: 20px auto;
  padding: 20px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.check-in-header {
  text-align: center;
  margin-bottom: 30px;
}

.check-in-header h1 {
  color: #333;
  margin-bottom: 10px;
}

.check-in-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30px;
  padding: 20px;
  background: #f8f9fa;
  border-radius: 6px;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 28px;
  font-weight: bold;
  color: #007cba;
  margin-bottom: 5px;
}

.stat-label {
  font-size: 14px;
  color: #666;
}

.check-in-action {
  text-align: center;
  margin-bottom: 30px;
}

#check-in-btn {
  font-size: 18px;
  padding: 15px 40px;
  border-radius: 25px;
  border: none;
  background: linear-gradient(45deg, #007cba, #0056b3);
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
}

#check-in-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0,124,186,0.3);
}

#check-in-btn:disabled {
  background: #6c757d;
  cursor: not-allowed;
  transform: none;
}

.check-in-message {
  margin-bottom: 20px;
}

.alert {
  padding: 15px;
  border-radius: 4px;
  margin-bottom: 20px;
}

.alert.success {
  background-color: #d4edda;
  border-color: #c3e6cb;
  color: #155724;
}

.alert.error {
  background-color: #f8d7da;
  border-color: #f5c6cb;
  color: #721c24;
}

.check-in-info {
  background: #f8f9fa;
  padding: 20px;
  border-radius: 6px;
}

.check-in-info h3 {
  margin-top: 0;
  color: #333;
}

.check-in-info ul {
  margin: 10px 0;
  padding-left: 20px;
}

.check-in-info li {
  margin-bottom: 8px;
  color: #666;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const checkInBtn = document.getElementById('check-in-btn');
  const btnText = document.getElementById('btn-text');
  const messageArea = document.getElementById('message-area');
  const messageContent = document.getElementById('message-content');
  const totalPoints = document.getElementById('total-points');
  const consecutiveDays = document.getElementById('consecutive-days');
  
  // 加载初始状态
  loadStatus();
  
  checkInBtn.addEventListener('click', function() {
    if (checkInBtn.disabled) return;
    
    checkInBtn.disabled = true;
    btnText.textContent = '签到中...';
    
    fetch('/check-in/check-in', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        showMessage('签到成功！获得 ' + data.data.points_earned + ' 积分', 'success');
        loadStatus();
      } else {
        showMessage(data.error || '签到失败，请重试', 'error');
        checkInBtn.disabled = false;
        btnText.textContent = '立即签到';
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showMessage('网络错误，请重试', 'error');
      checkInBtn.disabled = false;
      btnText.textContent = '立即签到';
    });
  });
  
  function loadStatus() {
    fetch('/check-in/status')
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        totalPoints.textContent = data.data.total_points;
        consecutiveDays.textContent = data.data.consecutive_days;
        
        if (data.data.checked_in_today) {
          btnText.textContent = '今日已签到';
          checkInBtn.disabled = true;
          checkInBtn.style.background = '#28a745';
        }
      }
    })
    .catch(error => {
      console.error('Error loading status:', error);
    });
  }
  
  function showMessage(text, type) {
    messageContent.textContent = text;
    messageContent.className = 'alert ' + type;
    messageArea.style.display = 'block';
    
    setTimeout(() => {
      messageArea.style.display = 'none';
    }, 5000);
  }
});
</script>
